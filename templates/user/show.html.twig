                <th>Amount</th>
                <th>Date</th>
                <th>Type</th>
                <th>Catégorie</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactionsFiltredTypeDebit %}
            <tr>
                <td>{{ transaction.amount }}</td>
